<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="@dimen/margin_top"
        android:orientation="vertical"
        android:background="@drawable/bg_simple_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvFaqQuestion"
            android:paddingStart="@dimen/margin_top"
            android:paddingEnd="@dimen/margin_top"
            android:text="Question ?"
            android:textColor="@color/golden"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvFaqAnswer"
            android:paddingStart="@dimen/margin_top"
            android:paddingEnd="@dimen/margin_top"
            android:paddingBottom="@dimen/margin_top"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/loreum_epsum"
            />
    </LinearLayout>
</LinearLayout>