<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/bg_main_front"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llResultDetail"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="Name"
            android:gravity="center"
            android:textColor="@color/colorThemeGolden"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <View
            android:background="@color/white"
            android:layout_width=".5dp"
            android:layout_height="match_parent"/>

        <TextView
            android:text="No. of Kills"
            android:gravity="center"
            android:textColor="@color/colorThemeGolden"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <View
            android:background="@color/white"
            android:layout_width=".5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:text="Earned Prizes"
            android:gravity="center"
            android:textColor="@color/colorThemeGolden"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/llResultDetail"
        android:id="@+id/rv_resultDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>