<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@drawable/bg_main_screen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="@drawable/bg_drawer_transparent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:drawableEnd="@drawable/ic_email"
            android:text="Mail Us     "
            android:gravity="center_vertical|right"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:id="@+id/tv_contactMail"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>

    <ImageView
        android:src="@drawable/ebg_logo_black"
        android:layout_width="120dp"
        android:layout_height="120dp" />


    <EditText
        android:layout_margin="@dimen/margin_top"
        android:id="@+id/et_contactUs"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:padding="4dp"
        android:textSize="14sp"
        android:gravity="start"
        android:hint="Write your Feedback or Comments (Max 200 Characters)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_et_white"
        android:minLines="12"
        android:maxLength="200"
       />

    <Button
        android:layout_marginStart="@dimen/margin_top"
        android:layout_marginEnd="@dimen/margin_top"
        android:id="@+id/btn_submitContact"
        style="@style/btn_main"
        android:text="Submit" />
    </LinearLayout>
</LinearLayout>