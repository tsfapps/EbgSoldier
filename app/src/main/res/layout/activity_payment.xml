<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <RelativeLayout
                android:layout_marginEnd="2dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:padding="8dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tvToolbar"
                    android:text="My Wallet"
                    android:layout_toRightOf="@id/iv_back"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/iv_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_wallet"
        android:layout_margin="16dp"
        android:layout_below="@id/appBar"/>
    <TextView
        android:id="@+id/wallet_amount_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wallet Amount : ₹ "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/iv_wallet"
        android:layout_marginTop="100dp"/>
    <TextView
        android:id="@+id/wallet_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/wallet_amount_txt"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/join_amount_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Fee : ₹ "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/iv_wallet"
        android:layout_below="@id/wallet_amount"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/join_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/join_amount_txt"
        android:layout_below="@id/wallet_amount"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_fee_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_wallet"
        android:layout_margin="24dp"
        android:text="₹ 10"
        android:gravity="center"
        android:focusable="true"/>

    <Button
        android:id="@+id/btn_payment"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Add"
        android:textAllCaps="false"
        android:background="@color/colorThemeGolden"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_fee_amount"
        android:layout_margin="24dp"/>

</RelativeLayout>