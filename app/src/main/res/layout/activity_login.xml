<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:orientation="vertical"
    android:background="@drawable/bg_main_front"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context=".activity.LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_gravity="center"
            android:background="@drawable/bg_color_white"
            android:layout_margin="@dimen/margin_top"
            android:padding="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_margin="4dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="60dp">
                <ImageView
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ebg_logo"
                    android:id="@+id/iv_laundry"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <EditText
                    android:id="@+id/et_user_name"
                    android:drawableStart="@drawable/ic_golden_phone"
                    style="@style/et_login"
                    android:inputType="textPersonName"
                    android:hint="PUBG Username"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                app:passwordToggleEnabled="true"
                app:passwordToggleDrawable="@drawable/ic_pass_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <EditText
                    android:drawableStart="@drawable/ic_golden_password"
                    android:id="@+id/et_login_pass"
                    style="@style/et_login"
                    android:inputType="textWebPassword"
                    android:hint="Password"
                    />

                <android.support.v7.widget.CardView
                    android:layout_gravity="center_horizontal"
                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="5dp"
                    android:padding="1dp"
                    android:layout_marginTop="24dp"
                    android:layout_width="150dp"
                    android:layout_height="50dp">
                    <Button
                        android:id="@+id/btn_login_submit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:text="Submit"
                        android:background="@drawable/bg_btn_main"/>
                </android.support.v7.widget.CardView>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_login_forgotPass"
                    android:text="Forgot Password ?\t"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_login_newRegister"
                    android:text="New Registration"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>