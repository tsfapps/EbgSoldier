<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/margin_top"
        android:padding="@dimen/margin_top"
        android:orientation="horizontal"
        android:background="@drawable/bg_drawer_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTopPlayersName"
            android:text="Tousif Akram"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvTopPlayersPubgId"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:textSize="16sp"
            android:layout_weight=".8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="₹ 1750"
            />
        <TextView
            android:id="@+id/tvTopPlayersEarned"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:textSize="16sp"
            android:layout_weight=".6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="₹ 1750"
            />
    </LinearLayout>
